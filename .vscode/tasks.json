{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Backend: cargo watch",
      "type": "shell",
      "command": "cargo",
      "args": ["watch", "-x", "run"],
      "options": {
        "cwd": "${workspaceFolder}/backend",
        "env": {
          "RUST_LOG": "debug"
        }
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "rust",
        "fileLocation": ["relative", "${workspaceFolder}/backend"],
        "pattern": {
          "regexp": "^(error|warning)\\[?.*\\]?:?\\s+(.*)$",
          "severity": 1,
          "message": 2
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\s*Compiling",
          "endsPattern": "^\\s*listening on"
        }
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev"
      }
    },
    {
      "label": "Frontend: vite dev",
      "type": "shell",
      "command": "pnpm",
      "args": ["dev"],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "vite",
        "fileLocation": ["relative", "${workspaceFolder}/frontend"],
        "pattern": {
          "regexp": "^$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "VITE",
          "endsPattern": "Local:\\s+http"
        }
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev"
      }
    },
    {
      "label": "Backend: cargo build (debug)",
      "type": "shell",
      "command": "cargo",
      "args": ["build", "-p", "rewind-backend"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "problemMatcher": "$rustc"
    }
  ]
}
